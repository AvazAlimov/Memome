<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#F9A825</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MainStyle.NoActionBar" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">#FBC02D</item>
        <item name="colorPrimaryDark">#F9A825</item>
        <item name="colorAccent">#00574B</item>
    </style>

    <style name="MainStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#FBC02D</item>
        <item name="colorPrimaryDark">#F9A825</item>
        <item name="colorAccent">#00574B</item>
    </style>

    <style name="DatePickerStyle" parent="Base.Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">#F9A825</item>
    </style>
</resources>
